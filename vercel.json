{
  "version": 2,
  "builds": [
    {
      "src": "event_project/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11",
        "includeFiles": ["staticfiles/**"]
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "event_project/wsgi.py" }
  ],
  "buildCommand": "python -m pip install -r requirements.txt && python manage.py collectstatic --noinput",
  "env": {
    "DJANGO_SETTINGS_MODULE": "event_project.settings",
    "PYTHONUNBUFFERED": "1"
  }
}